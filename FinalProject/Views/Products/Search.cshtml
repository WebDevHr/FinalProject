@{
}

@model FinalProject.Service.Models.SearchViewModel

<h2>Search Results</h2>

<form asp-action="Search" asp-controller="Products" method="get">
    <div class="input-group">
        <input type="text" class="form-control" placeholder="Search" name="query" value="@Model.Query" />
        <div class="input-group-append">
            <button class="btn btn-outline-secondary" type="submit">
                <i class="fas fa-search"></i>
            </button>
        </div>
    </div>
</form>

@if (Model.Results.Any())
{
    <ul class="list-group mt-3">
        @foreach (var product in Model.Results)
        {
            <li class="list-group-item">
                <h5>@product.Title</h5>
                <p>@product.Description</p>
            </li>
        }
    </ul>
}
else
{
    <p class="mt-3">No results found.</p>
}

